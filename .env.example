# =================================================================
# Meeting Scheduler Bot - Environment Variables Configuration
# =================================================================

# =========================================
# ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ
# =========================================

# Telegram Bot Token (получите у @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Admin Telegram IDs (разделенные запятыми)
ADMIN_TELEGRAM_IDS=123456789,987654321

# Database URL (PostgreSQL для продакшена, SQLite для разработки)
DATABASE_URL=postgresql://user:password@localhost:5432/meeting_scheduler
# DATABASE_URL=sqlite:///meeting_scheduler.db

# Google Calendar ID (найдите в настройках календаря Google)
GOOGLE_CALENDAR_ID_1=primary
GOOGLE_CALENDAR_ID_2=your-calendar@group.calendar.google.com

# =========================================
# GOOGLE CALENDAR AUTHENTICATION
# =========================================

# Service Account JSON (для продакшена - вставьте весь JSON как одну строку)
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project","private_key_id":"..."}

# Service Account File (для разработки - путь к JSON файлу)
GOOGLE_SERVICE_ACCOUNT_FILE=service_account_key.json

# =========================================
# ОПЦИОНАЛЬНЫЕ ПЕРЕМЕННЫЕ
# =========================================

# Часовой пояс
TIMEZONE=Europe/Moscow

# Окружение (development/production)
ENVIRONMENT=development

# Уровень логирования (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Режим отладки
DEBUG=false

# =========================================
# GOOGLE CALENDAR НАСТРОЙКИ
# =========================================

# Включить интеграцию с Google Calendar
GOOGLE_CALENDAR_ENABLED=true

# Режим fallback при недоступности Google Calendar
FALLBACK_MODE=true

# =========================================
# ВЕБЕРХУК НАСТРОЙКИ (для продакшена)
# =========================================

# URL для webhook (автоматически генерируется Render)
# WEBHOOK_URL=https://your-app.onrender.com

# Путь webhook
WEBHOOK_PATH=/webhook

# Порт приложения
PORT=8443

# Хост приложения
HOST=0.0.0.0

# =========================================
# DATABASE НАСТРОЙКИ
# =========================================

# Принудительное исправление enum (для PostgreSQL)
FORCE_ENUM_HOTFIX=true

# =========================================
# HEALTH CHECK
# =========================================

# Включить health check endpoint
HEALTH_CHECK_ENABLED=true

# =========================================
# ПРИМЕЧАНИЯ
# =========================================

# 1. Скопируйте этот файл как .env и заполните реальными значениями
# 2. Никогда не коммитьте .env файл в git
# 3. Для продакшена используйте переменные окружения в Render Dashboard
# 4. Service Account JSON должен быть одной строкой без переносов