# Application Configuration
TIMEZONE=Europe/Moscow
DEBUG=false
LOG_LEVEL=INFO
FORCE_ENUM_HOTFIX=true

# Webhook Configuration (for Render/production deployment)
WEBHOOK_URL=${WEBHOOK_URL}
WEBHOOK_PATH=/webhook
PORT=${PORT:-8443}